{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
        "react/prefer-stateless-function": "off",
        "react/require-extension": "off", // this rule is deprecated but comes with airbnb
        "semi": ["error", "never"],
        "eol-last": "off"
    }
}